<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelesAmpliados">

    <TextView
        android:id="@+id/tituloampliadohoteles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="La Aldea"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.05"
        />

    <ImageView
        android:id="@+id/fotoampliadohoteles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tituloampliadohoteles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:src="@drawable/restaurante01"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/calificacionhoteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calificacion 5"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/fotoampliadohoteles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.90"
        app:layout_constraintVertical_bias="0.02"
        android:textColor="@color/blue"
        />

        <TextView
            android:id="@+id/descripcionhoteles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuestro hotel ofrece un ambiente tranquilo, y campestre"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/fotoampliadohoteles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintVertical_bias="0.20"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/direccionhoteles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calle 10 Villa Nueva #8-73,Valparaiso, Antioquia"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/descripcionhoteles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0."
            app:layout_constraintVertical_bias="0.10"
            android:textAlignment="center"
            />
</androidx.constraintlayout.widget.ConstraintLayout>